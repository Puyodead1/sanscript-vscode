{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "//",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": ["/*", "*/"]
    },
    // symbols used as brackets
    "brackets": [
        ["IF", "ENDIF"],
        ["WHILE", "ENDWHILE"],
        ["REPEAT", "UNTIL"],
        ["FOR", "ENDFOR"],
        ["SCRIPT", "ENDSCRIPT"],
        ["PROC", "ENDPROC"],
        ["FUNC", "ENDFUNC"],
        ["SWITCH", "ENDSWITCH"],
        ["SCOPE", "ENDSCOPE"],
        ["GLOBALS", "ENDGLOBALS"],
        ["ENUM", "ENDENUM"],
        ["STRUCT", "ENDSTRUCT"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["<<", ">>"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["<<", ">>"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // "folding": {
    //     "markers": {
    //         "start": "^\\s*#region\\b",
    //         "end": "^\\s*#endregion\\b"
    //     }
    // },
    "indentationRules": {
        "increaseIndentPattern": "^((?!(\\-\\-)).)*((\\b(IF|WHILE|REPEAT|FOR|SCRIPT|PROC|FUNC|SWITCH|SCOPE|GLOBALS|ENUM|STRUCT)\\b((?!\\b(ENDIF|ENDWHILE|UNTIL|ENDPROC|ENDFUNC|ENDSWITCH|ENDSCOPE|ENDGLOBALS|ENDENUM|ENDSTRUCT)\\b).)*)|(\\{\\s*))$",
        "decreaseIndentPattern": "^\\s*((\\b(ENDIF|ENDWHILE|UNTIL|ENDPROC|ENDFUNC|ENDSWITCH|ENDSCOPE|ENDGLOBALS|ENDENUM|ENDSTRUCT)\\b)|(\\)))"
    }
}
